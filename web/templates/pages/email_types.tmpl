{{define "email_types"}}
{{template "base" .}}
{{end}}

{{define "title"}}Email Types{{end}}

{{define "content"}}
<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 fw-bold">
        <i class="bi bi-list-check me-2"></i>Email Types
    </h4>
    <button class="btn btn-primary btn-sm"
            hx-get="/gui/email-types/new"
            hx-target="#email-type-form-container"
            hx-swap="innerHTML">
        <i class="bi bi-plus-lg me-1"></i>Add Email Type
    </button>
</div>

<p class="text-muted small mb-3">
    Email types define the categories of emails the system can send. System types cannot be deleted.
    Each type has a set of available template variables that can be used in templates.
</p>

<!-- Form container (populated by HTMX when creating/editing) -->
<div id="email-type-form-container" class="mb-3"></div>

<!-- Email type list (loaded via HTMX) -->
<div id="email-type-table"
     hx-get="/gui/email-types/list"
     hx-trigger="load, emailTypeListRefresh from:body"
     hx-swap="innerHTML">
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 mb-0 text-muted small">Loading email types...</p>
        </div>
    </div>
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteEmailTypeModal" tabindex="-1" aria-labelledby="deleteEmailTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="deleteEmailTypeModalLabel">
                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>Delete Email Type
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="delete-email-type-modal-body">
                <!-- Populated by HTMX -->
            </div>
        </div>
    </div>
</div>
{{end}}

{{define "scripts"}}
<script>
    // Close delete modal after successful deletion
    document.body.addEventListener('emailTypeDeleted', function() {
        var modal = bootstrap.Modal.getInstance(document.getElementById('deleteEmailTypeModal'));
        if (modal) modal.hide();
    });
</script>
{{end}}
