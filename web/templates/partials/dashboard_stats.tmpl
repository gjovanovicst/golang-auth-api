{{define "dashboard_stats"}}
<div class="row g-3 mb-4">
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                        <i class="bi bi-people text-primary fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0 small">Total Users</h6>
                        <h4 class="mb-0 fw-bold">{{.TotalUsers}}</h4>
                        <small class="text-muted">
                            <span class="text-success">{{.ActiveUsers}} active</span>
                            {{if gt .InactiveUsers 0}}
                            / <span class="text-danger">{{.InactiveUsers}} inactive</span>
                            {{end}}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 rounded-3 p-3 me-3">
                        <i class="bi bi-building text-success fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0 small">Tenants</h6>
                        <h4 class="mb-0 fw-bold">{{.TotalTenants}}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-3 p-3 me-3">
                        <i class="bi bi-app-indicator text-info fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0 small">Applications</h6>
                        <h4 class="mb-0 fw-bold">{{.TotalApps}}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 rounded-3 p-3 me-3">
                        <i class="bi bi-journal-text text-warning fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0 small">Events (24h)</h6>
                        <h4 class="mb-0 fw-bold">{{.RecentEventsCount}}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{end}}
