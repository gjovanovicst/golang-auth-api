{{define "email_server_delete_confirm"}}
<div class="modal-body">
    <p>Are you sure you want to delete the SMTP configuration <strong>{{.ConfigName}}</strong> for <strong>{{.AppName}}</strong>?</p>
    <p class="text-muted small mb-0">
        <i class="bi bi-info-circle me-1"></i>
        This application will fall back to its default SMTP config or global settings after deletion.
    </p>
</div>
<div class="modal-footer border-0">
    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-danger btn-sm"
            hx-delete="/gui/email-servers/{{.ID}}"
            hx-target="#email-server-table"
            hx-swap="innerHTML">
        <i class="bi bi-trash me-1"></i>Delete Config
    </button>
</div>
{{end}}
