{{define "email_type_delete_confirm"}}
<div class="modal-body">
    <p>Are you sure you want to delete the email type <strong>{{.Name}}</strong> (<code>{{.Code}}</code>)?</p>
    <p class="text-muted small mb-0">
        <i class="bi bi-exclamation-triangle me-1"></i>
        Any email templates associated with this type will also need to be updated or removed.
    </p>
</div>
<div class="modal-footer border-0">
    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-danger btn-sm"
            hx-delete="/gui/email-types/{{.ID}}"
            hx-target="#email-type-table"
            hx-swap="innerHTML">
        <i class="bi bi-trash me-1"></i>Delete Type
    </button>
</div>
{{end}}
