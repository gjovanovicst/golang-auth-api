{{define "permission_form"}}
<div class="card border-0 shadow-sm border-start border-primary border-3">
    <div class="card-body">
        <h6 class="fw-bold mb-3">
            <i class="bi bi-plus-lg me-2"></i>Create Permission
        </h6>
        <form hx-post="/gui/permissions"
              hx-target="#permission-form-container"
              hx-swap="innerHTML">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="permResource" class="form-label small text-muted">Resource</label>
                    <input type="text" class="form-control" id="permResource" name="resource"
                           placeholder="e.g. invoice" required autofocus>
                </div>
                <div class="col-md-3">
                    <label for="permAction" class="form-label small text-muted">Action</label>
                    <input type="text" class="form-control" id="permAction" name="action"
                           placeholder="e.g. read" required>
                </div>
                <div class="col-md-3">
                    <label for="permDescription" class="form-label small text-muted">Description</label>
                    <input type="text" class="form-control" id="permDescription" name="description"
                           placeholder="Brief description">
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Create
                    </button>
                    <button type="button" class="btn btn-outline-secondary"
                            hx-get="/gui/permissions/form-cancel"
                            hx-target="#permission-form-container"
                            hx-swap="innerHTML">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{{end}}
