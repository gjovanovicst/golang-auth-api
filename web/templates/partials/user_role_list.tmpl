{{define "user_role_list"}}
<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        {{if .Items}}
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">User</th>
                        <th>Role</th>
                        <th>Assigned</th>
                        <th class="pe-3 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .Items}}
                    <tr>
                        <td class="ps-3">
                            <span class="fw-semibold">{{.UserEmail}}</span>
                            {{if .UserName}}
                            <br><small class="text-muted">{{.UserName}}</small>
                            {{end}}
                            <br><small class="text-muted font-monospace">{{.UserID}}</small>
                        </td>
                        <td>
                            <span class="badge bg-primary bg-opacity-10 text-primary">{{.RoleName}}</span>
                        </td>
                        <td>
                            <small class="text-muted">{{.AssignedAt}}</small>
                        </td>
                        <td class="pe-3 text-end">
                            <button class="btn btn-outline-danger btn-sm"
                                    hx-get="/gui/user-roles/revoke?user_id={{.UserID}}&role_id={{.RoleID}}&app_id={{.AppID}}&user_email={{.UserEmail}}&role_name={{.RoleName}}"
                                    hx-target="#revoke-modal-body"
                                    hx-swap="innerHTML"
                                    data-bs-toggle="modal"
                                    data-bs-target="#revokeRoleModal"
                                    title="Revoke">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {{if gt .TotalPages 1}}
        <div class="card-footer bg-white border-top d-flex align-items-center justify-content-between">
            <small class="text-muted">
                Showing page {{.Page}} of {{.TotalPages}} ({{.Total}} total)
            </small>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item {{if le .Page 1}}disabled{{end}}">
                        <a class="page-link" href="#"
                           hx-get="/gui/user-roles/list?app_id={{.AppID}}&page={{sub .Page 1}}"
                           hx-target="#user-role-table"
                           hx-swap="innerHTML">Previous</a>
                    </li>
                    <li class="page-item {{if ge .Page .TotalPages}}disabled{{end}}">
                        <a class="page-link" href="#"
                           hx-get="/gui/user-roles/list?app_id={{.AppID}}&page={{add .Page 1}}"
                           hx-target="#user-role-table"
                           hx-swap="innerHTML">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
        {{end}}

        {{else}}
        <div class="text-center py-5 text-muted">
            <i class="bi bi-person-badge fs-1"></i>
            <p class="mt-2 mb-0">No user-role assignments found for this application.</p>
        </div>
        {{end}}
    </div>
</div>
{{end}}
