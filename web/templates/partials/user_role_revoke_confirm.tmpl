{{define "user_role_revoke_confirm"}}
<div class="modal-body">
    <p>Are you sure you want to revoke the role <strong>{{.RoleName}}</strong> from user <strong>{{.UserEmail}}</strong>?</p>
    <p class="text-muted small mb-0">
        <i class="bi bi-info-circle me-1"></i>
        The user will lose all permissions associated with this role.
    </p>
</div>
<div class="modal-footer border-0">
    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-danger btn-sm"
            hx-delete="/gui/user-roles?user_id={{.UserID}}&role_id={{.RoleID}}&app_id={{.AppID}}"
            hx-target="#user-role-table"
            hx-swap="innerHTML"
            hx-headers='{"HX-Trigger-After-Swap": "roleRevoked"}'>
        <i class="bi bi-x-circle me-1"></i>Revoke Role
    </button>
</div>
{{end}}
